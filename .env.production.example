# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
DB_PASSWORD=your-secure-database-password
REDIS_PASSWORD=your-secure-redis-password

# Database Configuration
DATABASE_URL=postgresql+asyncpg://courtsight:${DB_PASSWORD}@db:5432/courtsight_db
REDIS_URL=redis://redis:6379/0

# Application Configuration
ENV=production
DEBUG=false
LOG_LEVEL=INFO

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
ALGORITHM=HS256

# CORS and Security
ALLOWED_HOSTS=["courtsight.id", "www.courtsight.id", "api.courtsight.id"]
CORS_ORIGINS=["https://courtsight.id", "https://www.courtsight.id"]

# Google AI Configuration
GOOGLE_APPLICATION_CREDENTIALS=/app/credential/g-72-courtsightteam-4b64a115adb5.json

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=/app/uploads

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@courtsight.id
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@courtsight.id

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Timezone
TZ=Asia/Jakarta